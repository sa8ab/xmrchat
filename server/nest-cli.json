{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "notifications/email/templates/**",
        "outDir": "dist/src/"
      },
      {
        "include": "i18n/**",
        "outDir": "dist/src/"
      }
    ],
    "watchAssets": true
  }
}